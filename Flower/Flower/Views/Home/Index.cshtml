@using Microsoft.AspNetCore.Identity
@using Flower.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Flower1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Do you want to know how to arrange a beautiful floral composition?</br> Floristic workshops are for you!</br>
                    <a class="btn btn-default" href="http://google.pl">
                        Check it!
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Flower2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Boring, autumn evenings? Spend them creatively!</br> Sign up for the flower arranging course!</br>
                    <a class="btn btn-default" href="http://google.pl">
                        Check it!
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/flower3.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Check out our discounts and win a trip from Spain!</br>
                    <a class="btn btn-default" href="http://google.pl">
                        Check it!
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    @await Html.PartialAsync("_HomeViewPartial", @UserManager.GetUserName(User))
    <p></br></br></br></br></br</br></br></br></p>
</div>